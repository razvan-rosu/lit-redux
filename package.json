{
  "name": "my-component",
  "version": "0.1.0",
  "description": "WebComponent my-component following open-wc recommendations",
  "author": "Răzvan Roșu",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "update-dependencies": "ncu -u",
    "start": "web-dev-server",
    "lint": "run-p lint:*",
    "lint:eclint": "git ls-files | xargs eclint check",
    "lint:eslint": "eslint --ext .js,.html .",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo 'these files above are not prettier formatted' && exit 1)",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "format:prettier": "prettier \"**/**/*.{js,mdx,md}\" --write",
    "storybook": "web-dev-server -c .storybook/server.mjs",
    "storybook:build": "build-storybook"
  },
  "dependencies": {
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.2.0",
    "@web/dev-server": "^0.1.5",
    "@web/dev-server-storybook": "^0.3.4",
    "eclint": "^2.8.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-check-updates": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "eclint fix"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
